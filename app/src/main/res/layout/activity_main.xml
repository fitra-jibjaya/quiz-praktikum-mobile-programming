<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/design_default_color_secondary_variant"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_marginTop="15dp"
        android:id="@+id/containerOne"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:hint="@string/value_default"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:background="@drawable/rec_border_white"
            android:padding="15dp"
            android:id="@+id/edit_one"
            android:inputType="number"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <CheckBox
            android:buttonTint="@android:color/white"
            android:id="@+id/cb_one"
            android:layout_marginStart="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:id="@+id/containerTwo"
        app:layout_constraintTop_toBottomOf="@+id/containerOne"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:hint="@string/value_default"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:padding="15dp"
            android:background="@drawable/rec_border_white"
            android:id="@+id/edit_two"
            android:inputType="number"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <CheckBox
            android:buttonTint="@android:color/white"
            android:id="@+id/cb_two"
            android:layout_marginStart="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/containerThree"
        android:layout_marginTop="15dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/containerTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:hint="@string/value_default"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:background="@drawable/rec_border_white"
            android:padding="15dp"
            android:id="@+id/edit_three"
            android:inputType="number"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <CheckBox
            android:buttonTint="@android:color/white"
            android:id="@+id/cb_three"
            android:layout_marginStart="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/containerButton"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/containerThree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnPlus"
            android:background="@drawable/rec_border_white"
            android:text="@string/plus"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"/>

        <Button
            android:id="@+id/btnMin"
            android:background="@drawable/rec_border_white"
            android:text="@string/minus"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"/>

        <Button
            android:id="@+id/btnX"
            android:background="@drawable/rec_border_white"
            android:text="@string/kali"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"/>

        <Button
            android:id="@+id/btnBagi"
            android:background="@drawable/rec_border_white"
            android:text="@string/bagi"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <View
            android:background="@drawable/rec_border_white"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1dp"/>

    </LinearLayout>

    <View
        android:id="@+id/view"
        android:background="@android:color/white"
        android:layout_marginTop="25dp"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toBottomOf="@+id/containerButton"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="300dp"
        android:layout_height="2dp"/>

    <LinearLayout
        app:layout_constraintTop_toBottomOf="@+id/view"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/hasil"
            android:text="@string/hasil"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/valueHasil"
            android:text="@string/value_finish"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="end"/>

        <View
            android:id="@+id/vieww"
            android:layout_marginTop="25dp"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toBottomOf="@+id/view"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="60dp"
            android:layout_height="1dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>